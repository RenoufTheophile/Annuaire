@model Annuaire.Models.PersonneParService
@{
    ViewData["Title"] = "IndexPersonne";

}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<form asp-controller="Personnes" asp-action="Index" method="get">
    <p>
        <select asp-for="PersonneService" asp-items="Model.Service">
            <option value="">All</option>
        </select>

        Title: <input type="text" asp-for="SearchString" />
        <input type="submit" value="Filter" />
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Personnes[0].Last)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Personnes[0].Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Personnes[0].Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Personnes[0].Service)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Personnes[0].First)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Personnes)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Last)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Phone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Service)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.First)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>